<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">

    <!-- Sidebar user panel (optional) -->
    <div class="user-panel">
      <div class="pull-left image">
        <img src="/assets/user2-160x160.jpg" class="img-circle" alt="User Image" />
      </div>
      <div class="pull-left info">
        <p><%= current_student.full_name %></p>
        <!-- Status -->
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>

    <!-- Sidebar Menu -->
    <ul class="sidebar-menu">
      <li class="header">Actions</li>
      <li><a href="<%= student_cabinet_url %>"><i class='fa fa-dashboard'></i> <span>Dashboard</span></a></li>
      <li><a href="<%= student_cabinet_edit_url %>"><i class='fa fa-edit'></i> <span>Change Password</span></a></li>
      <li><a href="<%= student_sign_out_path %>" data-confirm="Are You Sure?" data-method="delete" rel="nofollow">
        <i class='fa fa-laptop'></i> <span>Sign Out</span>
      </a></li>
    </ul><!-- /.sidebar-menu -->
  </section>
  <!-- /.sidebar -->
</aside>
